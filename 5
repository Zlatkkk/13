using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp19
{
    public abstract class Animal
    {
        public string Name { get; set; }
        public int Age { get; set; }
        public double Weight { get; set; }

        public Animal(string name, int age, double weight)
        {
            Name = name;
            Age = age;
            Weight = weight;
        }


        public abstract void Speak();
    }


    public class Mammal : Animal
    {
        public bool IsDomestic { get; set; }

        public Mammal(string name, int age, double weight, bool isDomestic)
            : base(name, age, weight)
        {
            IsDomestic = isDomestic;
        }

        public override void Speak()
        {
            Console.WriteLine($"{Name} говорит: гав!");
        }
    }

    public class Bird : Animal
    {
        public bool CanFly { get; set; }

        public Bird(string name, int age, double weight, bool canFly)
            : base(name, age, weight)
        {
            CanFly = canFly;
        }

        public override void Speak()
        {
            Console.WriteLine($"{Name} говорит: чирик!");
        }
    }

    public class Reptile : Animal
    {
        public bool IsVenomous { get; set; }

        public Reptile(string name, int age, double weight, bool isVenomous)
            : base(name, age, weight)
        {
            IsVenomous = isVenomous;
        }

        public override void Speak()
        {
            Console.WriteLine($"{Name} не издает ни звука.");
        }
    }
    class Program
    {
        static void Main(string[] args)
        {

            List<Animal> zoo = new List<Animal>
        {
            new Mammal("Собака", 5, 30, true),
            new Bird("Птичка", 2, 1.5, true),
            new Reptile("змея", 3, 5, true)
        };


            foreach (var animal in zoo)
            {
                Console.WriteLine($"имя: {animal.Name}, возраст: {animal.Age}, вес: {animal.Weight}");
                animal.Speak();
            }
        }
    }
}
